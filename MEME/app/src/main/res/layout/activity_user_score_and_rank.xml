<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".UserScoreAndRankActivity"
	android:background="@color/colorWhite">
	<Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="@color/colorPrimary"
		android:contentInsetStart="0dp"
		android:elevation="4dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:padding="0dp">

				<ImageView
					android:id="@+id/back_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="16dp"
					android:paddingEnd="8dp"
					android:src="@drawable/ic_arrow_back_black_24dp"
					tools:ignore="RtlSymmetry" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="6dp"
					android:fontFamily="@font/kristen_itc"
					android:text="Memer score and rank"
					android:textColor="@color/colorPrimaryDark"
					android:textSize="17sp"
					tools:ignore="HardcodedText" />
			</LinearLayout>

			<ProgressBar
				android:id="@+id/progress_bar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="16dp"
				android:visibility="gone"
				android:layout_alignParentEnd="true"/>
			<ImageView
				android:id="@+id/refresh_button"
				style="@style/header_progress_bar_style"
				android:src="@drawable/ic_autorenew_black_24dp"/>

		</RelativeLayout>
	</Toolbar>

	<LinearLayout
		android:layout_below="@id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp">

			<ProgressBar
				android:id="@+id/background_progress_bar"
				android:layout_width="180dp"
				android:layout_height="180dp"
				android:progress="100"
				style="?android:progressBarStyleHorizontal"
				android:progressDrawable="@drawable/circular_progress_bar_background"/>
			<ProgressBar
				android:id="@+id/foreground_progress_bar"
				android:layout_width="180dp"
				android:layout_height="180dp"
				style="?android:progressBarStyleHorizontal"
				android:progressDrawable="@drawable/circular_progress_bar"/>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:orientation="vertical"
				android:gravity="center_horizontal">
				<TextView
					android:id="@+id/user_score"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="23sp"
					android:fontFamily="@font/kristen_itc"
					android:textColor="@color/primary_dark"
					tools:ignore="HardcodedText" />
				<View
					android:layout_width="120dp"
					android:layout_height="2dp"
					android:background="@color/colorDarkGray" />
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:text="Goal"
						android:fontFamily="@font/kristen_itc"
						android:textColor="@color/colorDarkGray"
						tools:ignore="HardcodedText"
						android:layout_marginEnd="6dp"/>
					<TextView
						android:id="@+id/max_score"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="23sp"
						android:fontFamily="@font/kristen_itc"
						android:textColor="@color/colorDarkGray"
						tools:ignore="HardcodedText" />

				</LinearLayout>
			</LinearLayout>
		</RelativeLayout>

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/score_details_recycler_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"/>
	</LinearLayout>
</RelativeLayout>
