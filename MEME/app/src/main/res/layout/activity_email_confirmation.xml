<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".activity.EmailConfirmationActivity"
	android:gravity="center"
	android:background="@color/colorWhite"
	android:padding="16dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="vertical"
		tools:ignore="UselessParent">

		<TextView
			style="@style/fontSegoeUI"
			android:layout_marginBottom="24dp"
			android:text="Verification E-mail has been sent to your account"
			android:textColor="@color/colorDarkestGray"
			android:textSize="16sp"
			tools:ignore="HardcodedText"
			android:textAlignment="center"/>

		<Button
			android:id="@+id/send_email_button"
			style="@style/primaryLightButton"
			android:text="Re-send verification E-mail"
			android:layout_marginBottom="4dp"
			android:layout_marginTop="8dp"
			tools:ignore="HardcodedText" />

		<Button
			android:id="@+id/email_confirmation_button"
			style="@style/primaryDarkButton"
			android:text="Verify account"
			android:layout_marginBottom="0dp"
			android:layout_marginTop="8dp"
			tools:ignore="HardcodedText" />

		<ProgressBar
			android:id="@+id/progress_bar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="24dp"
			android:visibility="gone"/>
	</LinearLayout>

</RelativeLayout>
