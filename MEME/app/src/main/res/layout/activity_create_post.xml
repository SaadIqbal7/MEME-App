<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".CreatePostActivity"
	android:background="@color/colorWhite">

	<Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:elevation="4dp"
		android:contentInsetStart="0dp"
		android:background="@color/colorPrimary">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				tools:ignore="UseCompoundDrawables">

				<ImageView
					android:id="@+id/back_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="0dp"
					android:padding="16dp"
					android:src="@drawable/ic_arrow_back_black_24dp"
					tools:ignore="RtlSymmetry" />

				<TextView
					android:id="@+id/username_text_view"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="12dp"
					android:fontFamily="@font/kristen_itc"
					android:text="Create post"
					android:textColor="@color/colorPrimaryDark"
					android:textSize="18sp"
					tools:ignore="HardcodedText" />
			</LinearLayout>

			<ProgressBar
				android:id="@+id/progress_bar"
				style="@style/header_progress_bar_style" />
		</RelativeLayout>

	</Toolbar>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/toolbar">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="20dp"
				android:paddingBottom="20dp"
				android:paddingEnd="16dp"
				android:paddingStart="16dp"
				android:background="@color/colorWhite">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Add a description"
					android:textColor="@color/colorPrimaryDark"
					android:textSize="20sp"
					android:fontFamily="@font/segoe_ui"
					tools:ignore="HardcodedText" />
			</FrameLayout>

			<EditText
				android:id="@+id/post_description_edit_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorLightestGray"
				android:hint="Type a description..."
				android:paddingTop="12dp"
				android:paddingBottom="12dp"
				android:paddingStart="16dp"
				android:paddingEnd="16dp"
				android:inputType="text|textMultiLine|textCapSentences"
				android:textColor="@color/primary_dark"
				tools:ignore="HardcodedText">
			</EditText>

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="20dp"
				android:paddingBottom="20dp"
				android:paddingEnd="16dp"
				android:paddingStart="16dp"
				android:background="@color/colorWhite">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Add at least one tag"
					android:textColor="@color/colorPrimaryDark"
					android:textSize="20sp"
					android:fontFamily="@font/segoe_ui"
					tools:ignore="HardcodedText" />
			</FrameLayout>

			<EditText
				android:id="@+id/tag_1_edit_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorLightestGray"
				android:hint="Tag 1"
				android:paddingTop="12dp"
				android:paddingBottom="12dp"
				android:paddingStart="16dp"
				android:paddingEnd="16dp"
				android:textColor="@color/primary_dark"
				android:inputType="text|textCapSentences"
				tools:ignore="HardcodedText">
			</EditText>

			<EditText
				android:id="@+id/tag_2_edit_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorLightestGray"
				android:hint="Tag 2"
				android:paddingTop="12dp"
				android:paddingBottom="12dp"
				android:paddingStart="16dp"
				android:paddingEnd="16dp"
				android:textColor="@color/primary_dark"
				android:inputType="text|textCapSentences"
				tools:ignore="HardcodedText">
			</EditText>

			<EditText
				android:id="@+id/tag_3_edit_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorLightestGray"
				android:hint="Tag 3"
				android:paddingTop="12dp"
				android:paddingBottom="12dp"
				android:paddingStart="16dp"
				android:paddingEnd="16dp"
				android:textColor="@color/primary_dark"
				android:inputType="text|textCapSentences"
				tools:ignore="HardcodedText"
				>
			</EditText>

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="20dp"
				android:paddingBottom="20dp"
				android:paddingEnd="16dp"
				android:paddingStart="16dp"
				android:background="@color/colorWhite">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Choose category"
					android:textColor="@color/colorPrimaryDark"
					android:textSize="20sp"
					android:fontFamily="@font/segoe_ui"
					tools:ignore="HardcodedText" />
			</FrameLayout>

			<Spinner
				android:id="@+id/categories_spinner"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorLightestGray"
				android:paddingTop="12dp"
				android:paddingBottom="12dp"
				android:paddingStart="16dp"
				android:paddingEnd="16dp"
				android:textColor="@color/primary_dark"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="20dp"
				android:paddingBottom="20dp"
				android:paddingEnd="16dp"
				android:paddingStart="16dp"
				android:background="@color/colorWhite">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Choose picture"
					android:textColor="@color/colorPrimaryDark"
					android:textSize="20sp"
					android:fontFamily="@font/segoe_ui"
					tools:ignore="HardcodedText"
					android:layout_alignParentStart="true"
					android:layout_centerVertical="true"/>

				<ImageView
					android:id="@+id/choose_picture_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_more_vert_black_24dp"
					android:layout_alignParentEnd="true"
					android:layout_centerVertical="true"/>
			</RelativeLayout>

			<ImageView
				android:id="@+id/post_image"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true" />

			<Button
				android:id="@+id/post_button"
				style="@style/primaryDarkButton"
				android:text="Post"
				tools:ignore="HardcodedText"/>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
