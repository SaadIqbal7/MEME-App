<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorWhite"
	android:padding="16dp"
	tools:context=".activity.RegisterActivity"
	android:scrollbarThumbHorizontal="@null"
	android:scrollbarThumbVertical="@null">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:gravity="center"
		android:orientation="vertical">

		<TextView
			style="@style/fontKristen"
			android:layout_marginBottom="8dp"
			android:text="M.E.M.E"
			android:textColor="@color/colorPrimaryDark"
			android:textSize="22sp"
			tools:ignore="HardcodedText" />

		<TextView
			style="@style/fontKristen"
			android:layout_marginBottom="24dp"
			android:text="Make Everything More Entertaining"
			android:textColor="@color/colorPrimaryDark"
			android:textSize="16sp"
			tools:ignore="HardcodedText" />

		<TextView
			style="@style/fontSegoeUI"
			android:layout_marginBottom="24dp"
			android:text="Please register below"
			android:textColor="@color/colorDarkestGray"
			android:textSize="16sp"
			tools:ignore="HardcodedText" />

		<EditText
			android:id="@+id/username_edit_text"
			style="@style/RoundEditText"
			android:drawableStart="@drawable/baseline_face_black_24dp"
			android:hint="Username"
			android:importantForAutofill="no"
			android:inputType="text"
			tools:ignore="HardcodedText" />

		<EditText
			android:id="@+id/email_edit_text"
			style="@style/RoundEditText"
			android:drawableStart="@drawable/baseline_mail_outline_black_24dp"
			android:hint="E-mail address"
			android:importantForAutofill="no"
			android:inputType="textEmailAddress"
			tools:ignore="HardcodedText" />

		<EditText
			android:id="@+id/password_edit_text"
			style="@style/RoundEditText"
			android:layout_marginBottom="0dp"
			android:drawableStart="@drawable/baseline_lock_open_black_24dp"
			android:hint="Password"
			android:importantForAutofill="no"
			android:inputType="textPassword"
			tools:ignore="HardcodedText" />

		<Button
			android:id="@+id/sign_up_button"
			style="@style/primaryDarkButton"
			android:text="Sign up"
			tools:ignore="HardcodedText" />

		<LinearLayout
			android:id="@+id/login_activity_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal">

			<TextView
				style="@style/textButton"
				android:layout_marginEnd="4dp"
				android:text="Already have an account?"
				android:textColor="@color/colorDarkestGray"
				tools:ignore="HardcodedText" />

			<TextView
				style="@style/textButton"
				android:text="Log in."
				android:textColor="@color/colorPrimaryDark"
				android:textStyle="bold"
				tools:ignore="HardcodedText" />
		</LinearLayout>

		<ProgressBar
			android:id="@+id/progress_bar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:visibility="gone" />
	</LinearLayout>
</ScrollView>