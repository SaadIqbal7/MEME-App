<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="90dp"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/no_border_list_item_style">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/profile_picture"
			android:layout_width="90dp"
			android:layout_height="90dp"
			android:src="@drawable/rabbit"
			android:padding="16dp"/>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:orientation="vertical">
			<TextView
				android:id="@+id/name_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Saad Iqbal"
				android:textColor="@color/colorPrimaryDark"
				android:textStyle="bold"
				android:textSize="16sp"
				android:fontFamily="@font/segoe_ui"
				android:padding="2dp"
				tools:ignore="HardcodedText" />
			<TextView
				android:id="@+id/last_message_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Hellow, bro"
				android:textColor="@color/colorDarkGray"
				android:maxLines="1"
				android:fontFamily="@font/segoe_ui"
				android:textSize="13sp"
				android:padding="2dp"
				tools:ignore="HardcodedText" />
		</LinearLayout>
	</LinearLayout>

	<TextView
		android:id="@+id/last_message_time_text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Mon 13, 10:00 am"
		tools:ignore="HardcodedText"
		android:layout_marginBottom="22dp"
		android:layout_marginEnd="16dp"
		android:layout_marginStart="8dp"
		android:layout_alignParentEnd="true"
		android:textColor="@color/colorDarkGray"
		android:layout_alignParentBottom="true"
		android:fontFamily="@font/segoe_ui"
		android:textSize="12sp" />
</RelativeLayout>
